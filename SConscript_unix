# SConscript file for Unix build only
# Author: Mark Gottscho <mgottscho@ucla.edu>

import os

# Initialize build environment
env = Environment()

# Customize build settings

# LINUX
env.Append(CPPFLAGS = '-Wall -g -O3 -std=c++11 -mavx')
env.Append(CPPPATH = ['src/include', '/usr/include'])

# List all C++ source files
sources = [
	Glob('src/win/x86_64/*.asm'), # FIXME: These files are actually not needed on Unix
	Glob('src/*.cpp'), 
	Glob('src/win/*.cpp'),
	Glob('src/x86_64/*.cpp')
]

defaultBuild = env.Program(target = 'xmem', source = sources)

Default(defaultBuild)
